{
  "openapi": "3.1.1",
  "info": {
    "title": "Todolist RESTful API",
    "version": "1.0",
    "description": "OpenApi for Todolist RESTful API",
    "termsOfService": "http://google.com",
    "contact": {
      "name": "Fachran Sandi",
      "email": "fachransandi@gmail.com",
      "url": "http://gmail.com"
    },
    "license": {
      "name": "APACHE 2.0",
